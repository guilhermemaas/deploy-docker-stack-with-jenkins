pipeline {

    agent node('Ubuntu'){}

    stages {
        stage('Git Checkout') {
            steps {
                echo 'Listing Docker Swarm stacks:'
                sh 'ls -lha'
                sh 'pwd'
                sh 'docker stack ls'
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
            }
        }
        stage('Tests') {
            steps {
                echo 'Testing...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}
