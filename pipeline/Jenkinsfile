pipeline {

    agent any

    stages {
        stage('Git Checkout') {
            steps {
                echo 'Listing Docker Swarm stacks:'
                sh docker stack ls
            }
        }
        stage('Build') {
            steps {
                echo 'Building...'
            }
        }
        stage('Tests') {
            steps {
                echo 'Testing...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}